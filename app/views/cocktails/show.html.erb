<div class="padded">
  <h1>Recette du <%= @cocktail.name %></h1>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> :
      <%= dose.description %>
    </li>
    <% end %>
  </ul>
</div>
<%= link_to "Add an ingredient", new_cocktail_dose_path(params[:id]) , class: "btn btn-success"%>
<%= link_to "back", cocktails_path , class: "btn btn-success"%>
